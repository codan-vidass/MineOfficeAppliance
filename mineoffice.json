{
    "builders": [
        {
            "name": "virtualbox-ovf-1",
            "type": "virtualbox-ovf",
            "source_path": "../resources/debian-jessie.ova",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
            "post_shutdown_delay": "60s"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sleep 30",
                "sudo apt-get install -y software-properties-common",
                "sudo apt-get update",
                "sudo apt-get install -y git",
                "sudo apt-get install -y extlinux",
                "sudo apt-get install -y ntfs-3g",
                "sudo apt-get install -y pmount",
				"sudo apt-get install -y dos2unix",
				"sudo rm /etc/localtime",
				"sudo ln -s /usr/share/zoneinfo/Australia/Perth /etc/localtime",
                "echo export LS_COLORS=\\$LS_COLORS:\'di=0\;36\' >> ~/.bashrc"
            ]
        }
    ],
    "post-processors": ["vagrant"]
}